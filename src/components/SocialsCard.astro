---
import DockLink from "./DockLink.astro";

interface SocialLink {
	title: string;
	href: string;
	tint: string;
	iconAsset: string;
}

interface Props {
	title?: string;
	links: SocialLink[];
	revealOrder?: number;
}

const { title = "Socials", links, revealOrder = 1 } = Astro.props;
---

<div class="socials-card" data-reveal data-reveal-order={revealOrder}>
  <h2 class="socials-card__title">{title}</h2>
  <div class="socials-card__grid">
    {links.map((link, index) => (
      <DockLink
        href={link.href}
        title={link.title}
        tint={link.tint}
        iconAsset={link.iconAsset}
        revealOrder={revealOrder + index + 1}
      />
    ))}
  </div>
</div>

<style>
  .socials-card {
    background: var(--surface-elevated);
    border: 1px solid var(--panel-border);
    border-radius: var(--radius-3xl);
    padding: var(--card-padding);
    box-shadow: var(--shadow-card);
    transition: all var(--motion-duration-base) var(--motion-ease-out);
    height: fit-content;
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .socials-card:hover {
    box-shadow: var(--shadow-card-hover);
    border-color: var(--panel-border-strong);
  }

  .socials-card__title {
    font-size: var(--fs-title-3);
    font-weight: var(--fw-semibold);
    letter-spacing: var(--ls-title);
    margin: 0;
    color: var(--text-primary);
  }

  .socials-card__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--gap-lg) var(--gap-xl);
    align-items: start;
  }

  /* Tablet: 2 columns */
  @media (min-width: 640px) and (max-width: 1023px) {
    .socials-card__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--gap-md) var(--gap-lg);
    }
  }

  /* Mobile: 2 columns with tighter spacing */
  @media (max-width: 639px) {
    .socials-card {
      padding: var(--space-5) var(--space-4);
    }

    .socials-card__title {
      font-size: clamp(1.125rem, 4vw, 1.375rem);
      text-align: center;
    }

    .socials-card__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--gap-lg);
    }
  }
</style>
