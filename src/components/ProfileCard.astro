---
import IconTile from "./IconTile.astro";
import DockLink from "./DockLink.astro";

interface Props {
	name: string;
	title: string;
	bio?: string;
	avatarSrc?: string;
	email?: string;
	location?: string;
	socialLinks?: Array<{
		title: string;
		href: string;
		tint: string;
		iconAsset: string;
	}>;
	sectionId?: string;
	headingId?: string;
}

const {
	name = "Tulio Cunha",
	title = "Full Stack Developer",
	bio,
	avatarSrc = "/avatar-placeholder.svg",
	email = "contact@tuliocunha.dev",
	location = "Brazil",
	socialLinks = [],
	sectionId,
	headingId,
} = Astro.props;

const _contacts = [
	{
		label: "Email",
		href: `mailto:${email}`,
		tint: "blue",
		iconAsset: "/icons/Email.webp",
	},
	{
		label: location,
		href: "#",
		tint: "green",
		iconAsset: "/icons/Location.svg",
	},
];
---

<section
  id={sectionId}
  class="profile-card"
  data-reveal
  data-reveal-order="0"
  aria-labelledby={headingId ?? undefined}
  role="region"
>
  <div class="profile-card__identity">
    <div class="profile-card__photo" data-depth>
      <div class="profile-card__photo-ring" aria-hidden="true"></div>
      <img src={avatarSrc} alt={name} width="160" height="160" />
    </div>

    <div class="profile-card__content">
      <div class="profile-card__eyebrow icon-text-group" aria-hidden="true">
        <i class="ph ph-hand-waving icon--decorative icon--label" aria-hidden="true"></i>
        <span class="profile-card__eyebrow-label">Hello</span>
      </div>
      <h1 id={headingId} class="profile-card__name" tabindex="-1">{name}</h1>
      <p class="profile-card__title">{title}</p>
      {bio && <p class="profile-card__bio">{bio}</p>}

      <div class="profile-card__contact-bar" role="list">
        {_contacts.map((contact, index) => (
          <a
            href={contact.href}
            class="profile-card__contact"
            aria-label={contact.label}
            role="listitem"
            target={contact.href.startsWith('http') ? '_blank' : undefined}
            rel={contact.href.startsWith('http') ? 'noopener noreferrer' : undefined}
            data-reveal
            data-reveal-order={0.1 + index * 0.1}
          >
            <IconTile
              tint={contact.tint}
              label={contact.label}
              asset={contact.iconAsset}
              size="small"
            />
            <span class="profile-card__contact-meta">
              <span class="profile-card__contact-label">{contact.label}</span>
              {contact.href.startsWith("mailto:") ? (
                <span class="profile-card__contact-caption">Tap to write</span>
              ) : (
                <span class="profile-card__contact-caption">View details</span>
              )}
            </span>
          </a>
        ))}
      </div>
    </div>
  </div>

  <div class="profile-card__socials-section">
    <div class="widget-header">
      <span class="widget-eyebrow icon-text-group">
        <i class="ph ph-share-network icon--decorative icon--label" aria-hidden="true"></i>
        Connect
      </span>
      <h2 class="widget-title icon-text-group">
        Socials
        <i class="ph ph-users-three icon--heading" aria-hidden="true"></i>
      </h2>
      <p class="widget-caption">Connect across the ecosystem</p>
    </div>
    <div class="profile-socials__grid" role="list" aria-label="Social links">
      {socialLinks.map((link, index) => (
        <DockLink
          href={link.href}
          title={link.title}
          tint={link.tint}
          iconAsset={link.iconAsset}
          revealOrder={0.2 + index * 0.05}
        />
      ))}
    </div>
  </div>
</section>

<style>
  .profile-card {
    position: relative;
    display: grid;
    grid-template-columns: minmax(0, 1fr) minmax(0, 1fr);
    gap: clamp(var(--space-4), 2vw, var(--space-5));
    align-items: start;
    padding: clamp(28px, 3.5vw, 40px);
    background: var(--surface-elevated);
    border: 1px solid var(--panel-border);
    border-radius: 36px;
    box-shadow:
      var(--shadow-card),
      var(--shadow-card-highlight),
      0 0 0 0.5px rgba(255, 255, 255, 0.05),
      0 0 80px rgba(96, 156, 255, 0.06);
    backdrop-filter: blur(var(--glass-thick-blur)) saturate(var(--glass-saturation-base));
    -webkit-backdrop-filter: blur(var(--glass-thick-blur)) saturate(var(--glass-saturation-base));
    grid-column: 1 / -1;
    isolation: isolate;
    overflow: hidden;
    transition:
      transform var(--motion-duration-base) var(--spring-smooth),
      box-shadow var(--motion-duration-base) var(--motion-ease-out),
      border-color var(--motion-duration-fast) var(--motion-ease-out);
  }

  .profile-card::after {
    content: "";
    position: absolute;
    inset: -40% -35% auto auto;
    height: 120%;
    width: 80%;
    background:
      radial-gradient(circle at 26% 32%, rgba(108, 168, 255, 0.2), transparent 65%);
    opacity: 0.45;
    pointer-events: none;
    mix-blend-mode: screen;
    z-index: -1;
  }

  .profile-card:hover {
    transform: translateY(-2px);
    box-shadow:
      var(--shadow-card-hover),
      var(--shadow-card-highlight),
      var(--shadow-card-glow),
      0 0 0 1px rgba(255, 255, 255, 0.1),
      0 0 120px rgba(96, 156, 255, 0.12);
    border-color: var(--panel-border-strong);
  }

  .profile-card[data-reveal].is-visible {
    transform: translateY(0);
  }

  .profile-card__identity {
    display: grid;
    grid-template-columns: auto minmax(0, 1fr);
    gap: clamp(var(--space-3), 2vw, var(--space-5));
    align-items: start;
  }

  .profile-card__photo {
    position: relative;
    width: clamp(128px, 16vw, 168px);
    aspect-ratio: 1;
    border-radius: 32px;
    overflow: hidden;
    border: 1px solid var(--panel-border-strong);
    box-shadow:
      var(--shadow-2),
      0 0 60px rgba(96, 156, 255, 0.15);
    transition:
      transform var(--motion-duration-base) var(--motion-ease-out),
      box-shadow var(--motion-duration-fast) var(--motion-ease-out);
    transform-style: preserve-3d;
  }

  .profile-card__photo:hover {
    transform: translateY(-4px) scale(1.015);
    box-shadow:
      var(--shadow-card-hover),
      var(--shadow-card-highlight),
      0 0 80px rgba(96, 156, 255, 0.28);
  }

  .profile-card__photo-ring {
    position: absolute;
    inset: -12%;
    border-radius: inherit;
    background: linear-gradient(160deg, rgba(96, 156, 255, 0.42), rgba(24, 52, 140, 0.18));
    filter: blur(32px);
    opacity: 0.8;
    pointer-events: none;
    z-index: -1;
  }

  .profile-card__photo img {
    position: relative;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    border-radius: 32px;
    -webkit-transform: translateZ(0);
    transform: translateZ(0);
  }

  .profile-card__content {
    display: flex;
    flex-direction: column;
    gap: clamp(var(--space-3), 1.3vw, var(--space-5));
    min-width: 0;
    align-self: stretch;
  }

  .profile-card__eyebrow {
    font-size: var(--fs-eyebrow);
    letter-spacing: var(--ls-eyebrow);
    font-weight: var(--fw-medium);
    text-transform: uppercase;
    color: var(--text-tertiary);
  }

  .profile-card__eyebrow .icon--decorative {
    animation: wave 2.5s ease-in-out infinite;
  }

  @keyframes wave {
    0%, 100% { transform: rotate(0deg); }
    10%, 30% { transform: rotate(14deg); }
    20% { transform: rotate(-8deg); }
    40%, 100% { transform: rotate(0deg); }
  }

  .profile-card__eyebrow-label {
    color: inherit;
  }

  .profile-card__name {
    font-size: var(--fs-profile-name);
    font-weight: 700;
    letter-spacing: var(--ls-profile-name);
    line-height: var(--lh-profile-name);
    margin: 0;
    color: var(--text-primary);
  }

  .profile-card__title {
    font-size: var(--fs-profile-title);
    font-weight: var(--fw-medium);
    color: var(--text-secondary);
    margin: 0;
    letter-spacing: var(--ls-profile-title);
  }

  .profile-card__bio {
    font-size: var(--fs-profile-bio);
    color: var(--text-secondary);
    margin: 0;
    max-width: 54ch;
    line-height: 1.5;
  }

  .profile-card__contact-bar {
    display: flex;
    gap: var(--space-3);
    align-items: stretch;
    margin-top: clamp(var(--space-4), 2vw, var(--space-5));
    width: fit-content;
    max-width: 100%;
  }

  .profile-card__contact {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: 8px 12px;
    border-radius: 16px;
    border: 1px solid rgba(108, 168, 255, 0.28);
    background: var(--surface-translucent-2);
    background: color-mix(in srgb, var(--surface-translucent-2) 96%, rgba(70, 124, 220, 0.06));
    box-shadow: inset 0 0 0 1px rgba(120, 180, 255, 0.1);
    backdrop-filter: blur(var(--glass-regular-blur)) saturate(150%);
    -webkit-backdrop-filter: blur(var(--glass-regular-blur)) saturate(150%);
    min-height: 44px;
    text-decoration: none;
    transition: transform var(--motion-duration-spring-xs) var(--spring-responsive),
                border-color var(--motion-duration-sm) var(--motion-ease-out),
                background-color var(--motion-duration-sm) var(--motion-ease-out);
    position: relative;
    isolation: isolate;
  }

  .profile-card__contact::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: linear-gradient(140deg, rgba(92, 150, 255, 0.3), rgba(48, 96, 220, 0));
    opacity: 0;
    transition: opacity var(--motion-duration-sm) var(--motion-ease-out);
    z-index: -1;
  }

  .profile-card__contact:hover,
  .profile-card__contact:focus-visible {
    transform: translateY(-2px);
    border-color: rgba(128, 184, 255, 0.4);
  }

  .profile-card__contact:hover::after,
  .profile-card__contact:focus-visible::after {
    opacity: 1;
  }

  .profile-card__contact:focus-visible {
    box-shadow: var(--focus-ring);
  }

  .profile-card__contact-meta {
    display: flex;
    flex-direction: column;
    gap: 1px;
    min-width: 0;
  }

  .profile-card__contact-label {
    font-size: var(--fs-footnote);
    font-weight: var(--fw-semibold);
    color: var(--text-primary);
    letter-spacing: -0.01em;
    line-height: 1.2;
  }

  .profile-card__contact-caption {
    font-size: 10px;
    color: var(--text-tertiary);
    letter-spacing: 0.02em;
    line-height: 1.3;
    font-weight: var(--fw-regular);
    opacity: 0.8;
  }

  .profile-card__socials-section {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    padding: clamp(24px, 2.8vw, 32px);
    background: var(--surface-elevated);
    border: 1px solid var(--panel-border);
    border-radius: 36px;
    box-shadow:
      var(--shadow-card),
      var(--shadow-card-highlight),
      0 0 0 0.5px rgba(255, 255, 255, 0.04),
      0 0 50px rgba(10, 132, 255, 0.04);
    backdrop-filter: blur(var(--glass-regular-blur)) saturate(var(--glass-saturation-base));
    -webkit-backdrop-filter: blur(var(--glass-regular-blur)) saturate(var(--glass-saturation-base));
    overflow: hidden;
    z-index: 0;
    transition:
      transform var(--motion-duration-base) var(--motion-ease-out),
      border-color var(--motion-duration-fast) var(--motion-ease-out),
      box-shadow var(--motion-duration-base) var(--motion-ease-out);
    width: 100%;
  }

  .profile-card__socials-section:hover {
    transform: translateY(-6px);
    border-color: var(--panel-border-strong);
    box-shadow:
      var(--shadow-card-hover),
      var(--shadow-card-highlight),
      var(--shadow-card-glow),
      0 0 0 1px rgba(255, 255, 255, 0.08),
      0 0 90px rgba(10, 132, 255, 0.08);
  }

  .profile-card__socials-section .widget-header {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .profile-card__socials-section .widget-eyebrow {
    font-size: var(--fs-eyebrow);
    letter-spacing: var(--ls-eyebrow);
    text-transform: uppercase;
    font-weight: var(--fw-medium);
    color: var(--text-secondary);
  }

  .profile-card__socials-section .widget-title {
    font-size: var(--fs-title-2);
    font-weight: 700;
    letter-spacing: var(--ls-title);
    margin: 0;
    color: var(--text-primary);
  }

  .profile-card__socials-section .widget-caption {
    font-size: var(--fs-subheadline);
    color: var(--text-tertiary);
    letter-spacing: var(--ls-caption);
    margin: 0;
    max-width: 42ch;
  }

  .profile-card__socials-section .profile-socials__grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: var(--space-3);
    width: 100%;
  }

  @media (max-width: 1139px) {
    .profile-card {
      grid-template-columns: 1fr;
      row-gap: clamp(var(--space-4), 2.5vw, var(--space-6));
    }

    .profile-card__identity {
      grid-template-columns: auto minmax(0, 1fr);
    }

    .profile-card__socials-section {
      grid-column: 1 / -1;
      width: 100%;
      max-width: none;
    }
  }

  @media (max-width: 767px) {
    .profile-card {
      grid-template-columns: 1fr;
      justify-items: center;
      text-align: center;
      padding: clamp(24px, 6vw, 32px);
      /* Allow scrolling past card */
      touch-action: pan-y pinch-zoom;
    }

    .profile-card::after {
      inset: auto -40% -30% -40%;
      background: radial-gradient(circle at 50% 50%, rgba(102, 160, 255, 0.2), transparent 68%);
      opacity: 0.42;
    }

    .profile-card__identity {
      grid-template-columns: 1fr;
      justify-items: center;
      text-align: center;
    }

    .profile-card__content {
      align-items: center;
    }

    .profile-card__eyebrow {
      justify-content: center;
    }

    .profile-card__contact-bar {
      flex-direction: row;
      justify-content: center;
      gap: var(--space-2);
      width: 100%;
    }

    .profile-card__contact {
      padding: 8px 10px;
      min-height: 44px;
      gap: var(--space-1);
    }

    /* Make icons small on mobile */
    .profile-card__contact :global(.icon-tile) {
      width: 32px !important;
      height: 32px !important;
      border-radius: 10px !important;
    }

    .profile-card__contact-label {
      font-size: 11px;
    }

    .profile-card__contact-caption {
      font-size: 9px;
    }

    .profile-card__socials-section {
      padding: 16px;
    }

    .profile-card__socials-section .widget-header {
      align-items: center;
      text-align: center;
    }

    .profile-card__socials-section .profile-socials__grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: var(--space-2);
    }

    /* Enhanced touch interactions */
    .profile-card__contact,
    .profile-card__photo {
      touch-action: manipulation;
      -webkit-tap-highlight-color: transparent;
    }

    /* Prevent image blocking touch events */
    .profile-card__photo img {
      pointer-events: none;
      -webkit-user-drag: none;
      user-drag: none;
    }

    /* Smooth GPU acceleration for touch feedback */
    .profile-card,
    .profile-card__contact,
    .profile-card__photo {
      transform: translateZ(0);
      -webkit-transform: translateZ(0);
      backface-visibility: hidden;
      -webkit-backface-visibility: hidden;
    }
  }

  :global(html[data-theme="dark"] .profile-card::after) {
    background:
      radial-gradient(circle at 28% 30%, rgba(112, 172, 255, 0.22), transparent 62%),
      radial-gradient(circle at 78% 18%, rgba(164, 128, 255, 0.16), transparent 70%);
    opacity: 0.36;
    mix-blend-mode: soft-light;
  }

  /* Light mode shadow adjustments */
  :global([data-theme="light"]) .profile-card {
    box-shadow:
      var(--shadow-card),
      var(--shadow-card-highlight),
      0 0 0 0.5px rgba(255, 255, 255, 0.05),
      0 0 40px rgba(0, 122, 255, 0.03);
  }

  :global([data-theme="light"]) .profile-card:hover {
    box-shadow:
      var(--shadow-card-hover),
      var(--shadow-card-highlight),
      var(--shadow-card-glow),
      0 0 0 1px rgba(255, 255, 255, 0.1),
      0 0 60px rgba(0, 122, 255, 0.06);
  }

  :global([data-theme="light"]) .profile-card__photo {
    box-shadow:
      var(--shadow-2),
      0 0 30px rgba(0, 122, 255, 0.08);
  }

  :global([data-theme="light"]) .profile-card__photo:hover {
    box-shadow:
      var(--shadow-card-hover),
      var(--shadow-card-highlight),
      0 0 40px rgba(0, 122, 255, 0.14);
  }

  :global([data-theme="light"]) .profile-card__socials-section {
    box-shadow:
      var(--shadow-card),
      var(--shadow-card-highlight),
      0 0 0 0.5px rgba(255, 255, 255, 0.04),
      0 0 25px rgba(0, 122, 255, 0.02);
  }

  :global([data-theme="light"]) .profile-card__socials-section:hover {
    box-shadow:
      var(--shadow-card-hover),
      var(--shadow-card-highlight),
      var(--shadow-card-glow),
      0 0 0 1px rgba(255, 255, 255, 0.08),
      0 0 45px rgba(0, 122, 255, 0.04);
  }

  @media (max-width: 767px) {
    :global(html[data-theme="dark"] .profile-card::after) {
      inset: auto -36% -26% -36%;
      background:
        radial-gradient(circle at 52% 44%, rgba(112, 172, 255, 0.2), transparent 70%),
        radial-gradient(circle at 48% 78%, rgba(152, 120, 255, 0.12), transparent 76%);
      opacity: 0.38;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .profile-card,
    .profile-card__photo,
    .profile-card__contact {
      transition: none !important;
      transform: none !important;
    }
  }
</style>
