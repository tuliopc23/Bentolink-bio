---
import IconTile from "./IconTile.astro";

interface Props {
	name: string;
	title: string;
	bio?: string;
	avatarSrc?: string;
	email?: string;
	location?: string;
}

const {
	name = "Tulio Cunha",
	title = "Full Stack Developer",
	bio,
	avatarSrc = "/avatar-placeholder.svg",
	email = "contact@tuliocunha.dev",
	location = "Brazil",
} = Astro.props;

const _contacts = [
	{
		label: "Email",
		href: `mailto:${email}`,
		tint: "blue",
		iconAsset: "/icons/Email.webp",
	},
	{
		label: location,
		href: "#",
		tint: "green",
		iconAsset: "/icons/Location.svg",
	},
];
---

<section class="profile-card" data-reveal data-reveal-order="0">
  <div class="profile-card__identity">
    <div class="profile-card__photo" data-depth>
      <div class="profile-card__photo-ring" aria-hidden="true"></div>
      <img src={avatarSrc} alt={name} width="160" height="160" />
    </div>

    <div class="profile-card__content">
      <span class="profile-card__eyebrow" aria-hidden="true">
        <span class="profile-card__eyebrow-symbol" aria-hidden="true">ï£¿</span>
        Hello
      </span>
      <h1 class="profile-card__name">{name}</h1>
      <p class="profile-card__title">{title}</p>
      {bio && <p class="profile-card__bio">{bio}</p>}

      <div class="profile-card__contact-bar" role="list">
        {_contacts.map((contact, index) => (
          <a
            href={contact.href}
            class="profile-card__contact"
            aria-label={contact.label}
            role="listitem"
            target={contact.href.startsWith('http') ? '_blank' : undefined}
            rel={contact.href.startsWith('http') ? 'noopener noreferrer' : undefined}
            data-reveal
            data-reveal-order={0.1 + index * 0.1}
          >
            <IconTile
              tint={contact.tint}
              label={contact.label}
              asset={contact.iconAsset}
              size="small"
            />
            <span class="profile-card__contact-meta">
              <span class="profile-card__contact-label">{contact.label}</span>
              {contact.href.startsWith("mailto:") ? (
                <span class="profile-card__contact-caption">Tap to write</span>
              ) : (
                <span class="profile-card__contact-caption">View details</span>
              )}
            </span>
          </a>
        ))}
      </div>
    </div>
  </div>

  <div class="profile-card__socials-section">
    <slot />
  </div>
</section>

<style>
  .profile-card {
    position: relative;
    display: grid;
    grid-template-columns: minmax(0, 1.2fr) minmax(260px, 320px);
    gap: clamp(var(--space-4), 2vw, var(--space-5));
    align-items: start;
    padding: clamp(28px, 3.5vw, 40px);
    background: var(--surface-elevated);
    border: 1px solid var(--panel-border);
    border-radius: 36px;
    box-shadow: var(--shadow-card), var(--shadow-card-highlight);
    backdrop-filter: blur(var(--glass-thick-blur)) saturate(var(--glass-saturation-base));
    -webkit-backdrop-filter: blur(var(--glass-thick-blur)) saturate(var(--glass-saturation-base));
    grid-column: 1 / -1;
    isolation: isolate;
    overflow: hidden;
    transition: box-shadow var(--motion-duration-spring-sm) var(--spring-smooth),
                border-color var(--motion-duration-sm) var(--motion-ease-out),
                transform var(--motion-duration-spring-sm) var(--spring-smooth);
  }

  .profile-card::after {
    content: "";
    position: absolute;
    inset: -40% -35% auto auto;
    height: 120%;
    width: 80%;
    background: radial-gradient(circle at 30% 30%, rgba(90, 150, 255, 0.22), transparent 65%);
    opacity: 0.85;
    pointer-events: none;
    mix-blend-mode: screen;
    z-index: -1;
  }

  .profile-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-card-hover), var(--shadow-card-highlight), var(--shadow-card-glow);
    border-color: var(--panel-border-strong);
  }

  .profile-card[data-reveal].is-visible {
    transform: translateY(0);
  }

  .profile-card__identity {
    display: grid;
    grid-template-columns: auto minmax(0, 1fr);
    gap: clamp(var(--space-3), 2vw, var(--space-5));
    align-items: start;
  }

  .profile-card__photo {
    position: relative;
    width: clamp(128px, 16vw, 168px);
    aspect-ratio: 1;
    border-radius: 32px;
    overflow: hidden;
    border: 1px solid var(--panel-border-strong);
    box-shadow: var(--shadow-2);
    transition: transform var(--motion-duration-spring-sm) var(--spring-smooth),
                box-shadow var(--motion-duration-sm) var(--motion-ease-out);
    transform-style: preserve-3d;
  }

  .profile-card__photo:hover {
    transform: translateY(-4px) scale(1.015);
    box-shadow: var(--shadow-card-hover), var(--shadow-card-highlight);
  }

  .profile-card__photo-ring {
    position: absolute;
    inset: -12%;
    border-radius: inherit;
    background: linear-gradient(160deg, rgba(120, 175, 255, 0.42), rgba(40, 80, 255, 0.16));
    filter: blur(32px);
    opacity: 0.85;
    pointer-events: none;
    z-index: -1;
  }

  .profile-card__photo img {
    position: relative;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .profile-card__content {
    display: flex;
    flex-direction: column;
    gap: clamp(var(--space-3), 1.3vw, var(--space-5));
    min-width: 0;
    align-self: stretch;
  }

  .profile-card__eyebrow {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--fs-eyebrow);
    letter-spacing: var(--ls-eyebrow);
    font-weight: var(--fw-medium);
    text-transform: uppercase;
    color: var(--text-secondary);
  }

  .profile-card__eyebrow-symbol {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 1.5rem;
    height: 1.5rem;
    border-radius: 50%;
    background: rgba(120, 175, 255, 0.18);
    color: var(--color-primary);
    font-weight: var(--fw-semibold);
    font-size: 0.95rem;
    line-height: 1;
  }

  .profile-card__name {
    font-size: var(--fs-profile-name);
    font-weight: 700;
    letter-spacing: var(--ls-profile-name);
    line-height: var(--lh-profile-name);
    margin: 0;
    color: var(--text-primary);
  }

  .profile-card__title {
    font-size: var(--fs-profile-title);
    font-weight: var(--fw-medium);
    color: var(--text-secondary);
    margin: 0;
    letter-spacing: var(--ls-profile-title);
  }

  .profile-card__bio {
    font-size: var(--fs-profile-bio);
    color: var(--text-secondary);
    margin: 0;
    max-width: 54ch;
    line-height: var(--lh-base);
  }

  .profile-card__contact-bar {
    display: flex;
    flex-wrap: wrap;
    gap: clamp(var(--space-2), 1vw, var(--space-3));
    align-items: stretch;
    padding: 12px;
    border-radius: 24px;
    border: 1px solid rgba(140, 170, 240, 0.2);
    background: var(--surface-translucent-2);
    background: color-mix(in srgb, var(--surface-translucent-2) 88%, transparent);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.04);
    backdrop-filter: blur(var(--glass-regular-blur)) saturate(180%);
    -webkit-backdrop-filter: blur(var(--glass-regular-blur)) saturate(180%);
    margin-top: clamp(var(--space-4), 2vw, var(--space-5));
    width: fit-content;
    max-width: 100%;
  }

  .profile-card__contact {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: 10px 18px 10px 12px;
    border-radius: 22px;
    border: 1px solid transparent;
    min-height: 52px;
    text-decoration: none;
    transition: transform var(--motion-duration-spring-xs) var(--spring-responsive),
                border-color var(--motion-duration-sm) var(--motion-ease-out),
                background-color var(--motion-duration-sm) var(--motion-ease-out);
    position: relative;
    isolation: isolate;
  }

  .profile-card__contact::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: linear-gradient(140deg, rgba(120, 175, 255, 0.25), rgba(40, 80, 255, 0));
    opacity: 0;
    transition: opacity var(--motion-duration-sm) var(--motion-ease-out);
    z-index: -1;
  }

  .profile-card__contact:hover,
  .profile-card__contact:focus-visible {
    transform: translateY(-2px);
    border-color: rgba(120, 175, 255, 0.4);
  }

  .profile-card__contact:hover::after,
  .profile-card__contact:focus-visible::after {
    opacity: 1;
  }

  .profile-card__contact:focus-visible {
    box-shadow: var(--focus-ring);
  }

  .profile-card__contact-meta {
    display: flex;
    flex-direction: column;
    gap: 2px;
    min-width: 0;
  }

  .profile-card__contact-label {
    font-size: var(--fs-subheadline);
    font-weight: var(--fw-semibold);
    color: var(--text-primary);
    letter-spacing: -0.01em;
  }

  .profile-card__contact-caption {
    font-size: var(--fs-footnote);
    color: var(--text-tertiary);
    letter-spacing: var(--ls-caption);
  }

  .profile-card__socials-section {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    padding: 18px;
    border-radius: 28px;
    border: 1px solid rgba(140, 170, 240, 0.18);
    background: var(--surface-translucent-2);
    background: color-mix(in srgb, var(--surface-translucent-2) 92%, transparent);
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.04);
    min-width: min(320px, 100%);
    max-width: 360px;
    justify-self: end;
    align-self: stretch;
  }

  .profile-card__socials-section .profile-socials__header {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: var(--space-2);
  }

  .profile-card__socials-section .profile-socials__eyebrow {
    font-size: var(--fs-eyebrow);
    letter-spacing: var(--ls-eyebrow);
    text-transform: uppercase;
    font-weight: var(--fw-medium);
    color: var(--text-secondary);
  }

  .profile-card__socials-section .profile-socials__caption {
    font-size: var(--fs-footnote);
    color: var(--text-tertiary);
    letter-spacing: var(--ls-caption);
    margin: 0;
  }

  .profile-card__socials-section .profile-socials__grid {
    display: flex;
    flex-direction: column;
    gap: clamp(var(--space-2), 1vw, var(--space-3));
    width: 100%;
  }

  @media (max-width: 1139px) {
    .profile-card {
      grid-template-columns: 1fr;
      row-gap: clamp(var(--space-4), 2.5vw, var(--space-6));
    }

    .profile-card__identity {
      grid-template-columns: auto minmax(0, 1fr);
    }

    .profile-card__socials-section {
      grid-column: 1 / -1;
      width: 100%;
      max-width: none;
    }
  }

  @media (max-width: 767px) {
    .profile-card {
      grid-template-columns: 1fr;
      justify-items: center;
      text-align: center;
      padding: clamp(24px, 6vw, 32px);
    }

    .profile-card::after {
      inset: auto -40% -30% -40%;
      background: radial-gradient(circle at 50% 50%, rgba(120, 175, 255, 0.24), transparent 65%);
    }

    .profile-card__identity {
      grid-template-columns: 1fr;
      justify-items: center;
      text-align: center;
    }

    .profile-card__content {
      align-items: center;
    }

    .profile-card__contact-bar {
      flex-direction: column;
      align-items: stretch;
      gap: var(--space-3);
      padding: 16px;
      width: 100%;
    }

    .profile-card__contact {
      justify-content: center;
    }

    .profile-card__socials-section {
      padding: 16px;
    }

    .profile-card__socials-section .profile-socials__header {
      align-items: center;
      text-align: center;
    }

    .profile-card__socials-section .profile-socials__grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: var(--space-2);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .profile-card,
    .profile-card__photo,
    .profile-card__contact {
      transition: none !important;
      transform: none !important;
    }
  }
</style>
