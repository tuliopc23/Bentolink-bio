---
import IconTile from "./IconTile.astro";

interface Props {
	href: string;
	title: string;
	tint: string;
	iconAsset?: string;
	revealOrder?: number;
	featured?: boolean;
}

const { href, title, tint = "blue", iconAsset, revealOrder } = Astro.props;
---

<a 
  class="dock-link"
  href={href}
  data-reveal
  data-reveal-order={revealOrder}
  role="listitem"
  target={href.startsWith('http') ? '_blank' : undefined}
  rel={href.startsWith('http') ? 'noopener noreferrer' : undefined}
>
  <IconTile tint={tint} label={title} asset={iconAsset} size="large" />
  <span class="dock-link__name">{title}</span>
</a>

<style>
  .dock-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    text-decoration: none;
    padding: var(--space-2);
    border-radius: 20px;
    transition: transform var(--motion-duration-spring-xs) var(--spring-snappy),
                box-shadow var(--motion-duration-sm) var(--motion-ease-out),
                background-color var(--motion-duration-sm) var(--motion-ease-out);
    min-height: 0;
    width: 100%;
    position: relative;
    background: var(--surface);
    background: color-mix(in srgb, var(--surface) 92%, rgba(52, 104, 216, 0.08));
    border: 1px solid rgba(96, 152, 244, 0.22);
    box-shadow: var(--shadow-0), var(--shadow-card);
    backdrop-filter: blur(var(--glass-ultra-thin-blur)) saturate(150%);
    -webkit-backdrop-filter: blur(var(--glass-ultra-thin-blur)) saturate(150%);
  }

  .dock-link::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: linear-gradient(180deg, rgba(88, 148, 246, 0.22), transparent 82%);
    opacity: 0.6;
    pointer-events: none;
  }
  
  .dock-link:hover {
    transform: translateY(-4px) scale(var(--motion-scale-card));
    box-shadow: var(--shadow-card-hover), var(--shadow-card-highlight);
    border-color: rgba(132, 186, 255, 0.4);
  }
  
  .dock-link:focus-visible {
    box-shadow: var(--shadow-card-hover), var(--focus-ring);
    outline: none;
  }
  
  .dock-link:active {
    transform: translateY(-2px) scale(var(--motion-scale-active));
  }
  
  .dock-link__name {
    font-size: var(--fs-caption);
    font-weight: var(--fw-semibold);
    color: var(--text-primary);
    text-align: center;
    letter-spacing: var(--ls-caption);
    line-height: var(--lh-tight);
    margin: 0;
  }
  
  
  /* Responsive */
  @media (max-width: 639px) {
    .dock-link {
      padding: var(--space-1) var(--space-2);
      gap: var(--space-1);
    }

    .dock-link__name {
      font-size: var(--fs-footnote);
    }
  }
</style>
