---
import IconTile from "./IconTile.astro";

interface Props {
	href: string;
	title: string;
	tint: string;
	iconAsset?: string;
	revealOrder?: number;
	featured?: boolean;
}

const { href, title, tint = "blue", iconAsset, revealOrder } = Astro.props;
---

<a 
  class="dock-link hover-elevate"
  data-tint={tint}
  href={href}
  data-reveal
  data-reveal-order={revealOrder}
  role="listitem"
  target={href.startsWith('http') ? '_blank' : undefined}
  rel={href.startsWith('http') ? 'noopener noreferrer' : undefined}
>
  <IconTile tint={tint} label={title} asset={iconAsset} size="large" />
  <span class="dock-link__name">{title}</span>
</a>

<style>
  .dock-link {
    --dock-accent-base: rgba(255, 255, 255, 0.08);
    --dock-accent-hover: rgba(255, 255, 255, 0.16);
    --dock-accent-strong: rgba(255, 255, 255, 0.24);
    --dock-focus-ring: rgba(255, 255, 255, 0.2);
    --hover-elevate-translate: -4px;
    --hover-elevate-scale: 1.015;
    --hover-shadow: var(--shadow-card-hover), var(--shadow-card-highlight), var(--shadow-card-glow);
    --hover-border: color-mix(in srgb, var(--panel-border-strong) 55%, transparent);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    text-decoration: none;
    padding: var(--space-2);
    border-radius: 22px;
    transition:
      transform var(--motion-duration-fast) var(--motion-ease-out),
      box-shadow var(--motion-duration-fast) var(--motion-ease-out),
      background-color var(--motion-duration-fast) var(--motion-ease-out),
      border-color var(--motion-duration-fast) var(--motion-ease-out);
    min-height: 0;
    width: 100%;
    position: relative;
    isolation: isolate;
    background: color-mix(in srgb, var(--surface-card) 96%, transparent);
    border: 1px solid color-mix(in srgb, var(--panel-border) 68%, transparent);
    box-shadow:
      var(--shadow-card),
      var(--shadow-card-highlight),
      inset 0 1px 0 rgba(255, 255, 255, 0.08),
      0 0 36px rgba(10, 132, 255, 0.05);
    backdrop-filter: blur(var(--glass-thin-blur)) saturate(var(--glass-saturation-base));
    -webkit-backdrop-filter: blur(var(--glass-thin-blur)) saturate(var(--glass-saturation-base));
  }

  .dock-link::before,
  .dock-link::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    pointer-events: none;
  }

  .dock-link::before {
    inset: 1px;
    background: radial-gradient(circle at 50% 14%, var(--dock-accent-base), rgba(0, 0, 0, 0) 72%);
    opacity: 0.22;
    mix-blend-mode: soft-light;
    transition: opacity var(--motion-duration-sm) var(--motion-ease-out);
  }

  .dock-link::after {
    opacity: 0;
    box-shadow:
      0 0 0 1px rgba(255, 255, 255, 0.12),
      0 0 0 6px var(--dock-focus-ring);
    transition:
      opacity var(--motion-duration-sm) var(--motion-ease-out),
      box-shadow var(--motion-duration-sm) var(--motion-ease-out);
  }
  
  .dock-link:hover {
    background: color-mix(in srgb, var(--surface-card) 98%, transparent);
    border-color: var(--hover-border);
    box-shadow: var(--hover-shadow);
  }

  .dock-link:hover::before {
    opacity: 0.34;
    background: radial-gradient(circle at 50% 14%, var(--dock-accent-hover), rgba(0, 0, 0, 0) 72%);
  }
  
  .dock-link:focus-visible {
    outline: none;
  }

  .dock-link:focus-visible::after {
    opacity: 1;
  }
  
  .dock-link:active {
    --hover-translate: calc(var(--hover-elevate-translate) / 2);
    --hover-scale: var(--motion-scale-active);
    background: color-mix(in srgb, var(--surface-card-active) 94%, transparent);
    transform: translateY(-2px) scale(0.98);
    transition-duration: var(--motion-duration-instant);
  }
  .dock-link[data-tint="blue"] {
    --dock-accent-base: rgba(10, 132, 255, 0.12);
    --dock-accent-hover: rgba(10, 132, 255, 0.24);
    --dock-accent-strong: rgba(10, 132, 255, 0.34);
    --dock-focus-ring: rgba(10, 132, 255, 0.28);
    --hover-border: rgba(10, 132, 255, 0.42);
  }

  .dock-link[data-tint="indigo"] {
    --dock-accent-base: rgba(94, 92, 232, 0.12);
    --dock-accent-hover: rgba(94, 92, 232, 0.24);
    --dock-accent-strong: rgba(94, 92, 232, 0.34);
    --dock-focus-ring: rgba(94, 92, 232, 0.28);
    --hover-border: rgba(94, 92, 232, 0.42);
  }

  .dock-link[data-tint="teal"] {
    --dock-accent-base: rgba(95, 212, 255, 0.12);
    --dock-accent-hover: rgba(95, 212, 255, 0.24);
    --dock-accent-strong: rgba(95, 212, 255, 0.34);
    --dock-focus-ring: rgba(95, 212, 255, 0.28);
    --hover-border: rgba(95, 212, 255, 0.42);
  }

  .dock-link[data-tint="cyan"] {
    --dock-accent-base: rgba(90, 200, 250, 0.12);
    --dock-accent-hover: rgba(90, 200, 250, 0.24);
    --dock-accent-strong: rgba(90, 200, 250, 0.34);
    --dock-focus-ring: rgba(90, 200, 250, 0.28);
    --hover-border: rgba(90, 200, 250, 0.42);
  }

  .dock-link[data-tint="green"] {
    --dock-accent-base: rgba(48, 217, 72, 0.12);
    --dock-accent-hover: rgba(48, 217, 72, 0.24);
    --dock-accent-strong: rgba(48, 217, 72, 0.34);
    --dock-focus-ring: rgba(48, 217, 72, 0.28);
    --hover-border: rgba(48, 217, 72, 0.42);
  }

  .dock-link[data-tint="orange"] {
    --dock-accent-base: rgba(255, 160, 13, 0.12);
    --dock-accent-hover: rgba(255, 160, 13, 0.24);
    --dock-accent-strong: rgba(255, 160, 13, 0.34);
    --dock-focus-ring: rgba(255, 160, 13, 0.28);
    --hover-border: rgba(255, 160, 13, 0.42);
  }

  .dock-link[data-tint="pink"] {
    --dock-accent-base: rgba(255, 56, 97, 0.12);
    --dock-accent-hover: rgba(255, 56, 97, 0.24);
    --dock-accent-strong: rgba(255, 56, 97, 0.34);
    --dock-focus-ring: rgba(255, 56, 97, 0.28);
    --hover-border: rgba(255, 56, 97, 0.42);
  }

  .dock-link[data-tint="purple"] {
    --dock-accent-base: rgba(194, 91, 244, 0.12);
    --dock-accent-hover: rgba(194, 91, 244, 0.24);
    --dock-accent-strong: rgba(194, 91, 244, 0.34);
    --dock-focus-ring: rgba(194, 91, 244, 0.28);
    --hover-border: rgba(194, 91, 244, 0.42);
  }

  .dock-link[data-tint="red"] {
    --dock-accent-base: rgba(255, 71, 60, 0.12);
    --dock-accent-hover: rgba(255, 71, 60, 0.24);
    --dock-accent-strong: rgba(255, 71, 60, 0.34);
    --dock-focus-ring: rgba(255, 71, 60, 0.28);
    --hover-border: rgba(255, 71, 60, 0.42);
  }

  .dock-link[data-tint="yellow"] {
    --dock-accent-base: rgba(255, 215, 13, 0.12);
    --dock-accent-hover: rgba(255, 215, 13, 0.24);
    --dock-accent-strong: rgba(255, 215, 13, 0.34);
    --dock-focus-ring: rgba(255, 215, 13, 0.28);
    --hover-border: rgba(255, 215, 13, 0.42);
  }

  .dock-link__name {
    font-size: var(--fs-caption);
    font-weight: var(--fw-semibold);
    color: var(--text-primary);
    text-align: center;
    letter-spacing: var(--ls-caption);
    line-height: var(--lh-tight);
    margin: 0;
  }
  :global([data-theme="light"]) .dock-link {
    background: color-mix(in srgb, white 80%, rgba(0, 0, 0, 0.02));
    border-color: color-mix(in srgb, var(--panel-border) 45%, rgba(34, 48, 88, 0.18));
    box-shadow:
      0 1px 2px rgba(31, 35, 53, 0.18),
      0 6px 16px rgba(31, 35, 53, 0.16),
      0 20px 34px rgba(31, 35, 53, 0.14),
      inset 0 1px 0 rgba(255, 255, 255, 0.68);
  }

  :global([data-theme="light"]) .dock-link:hover {
    border-color: color-mix(in srgb, var(--panel-border-strong) 52%, rgba(34, 48, 88, 0.16));
    box-shadow:
      0 2px 4px rgba(31, 35, 53, 0.22),
      0 10px 24px rgba(31, 35, 53, 0.18),
      0 30px 48px rgba(31, 35, 53, 0.16),
      inset 0 1px 0 rgba(255, 255, 255, 0.76);
  }
  
  
  /* Responsive */
  @media (max-width: 639px) {
    .dock-link {
      padding: var(--space-1) var(--space-2);
      gap: var(--space-1);
    }

    .dock-link__name {
      font-size: var(--fs-footnote);
    }
  }
</style>
