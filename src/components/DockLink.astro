---
import IconTile from "./IconTile.astro";

interface Props {
	href: string;
	title: string;
	tint: string;
	iconAsset?: string;
	revealOrder?: number;
	featured?: boolean;
}

const { href, title, tint = "blue", iconAsset, revealOrder } = Astro.props;
---

<a 
  class="dock-link"
  data-tint={tint}
  href={href}
  data-reveal
  data-reveal-order={revealOrder}
  role="listitem"
  target={href.startsWith('http') ? '_blank' : undefined}
  rel={href.startsWith('http') ? 'noopener noreferrer' : undefined}
>
  <IconTile tint={tint} label={title} asset={iconAsset} size="large" />
  <span class="dock-link__name">{title}</span>
</a>

<style>
  .dock-link {
    --dock-accent-base: rgba(255, 255, 255, 0.05);
    --dock-accent-hover: rgba(255, 255, 255, 0.12);
    --dock-focus-ring: rgba(255, 255, 255, 0.16);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    text-decoration: none;
    padding: var(--space-2);
    border-radius: 22px;
    transition:
      transform var(--motion-duration-spring-xs) var(--spring-snappy),
      box-shadow var(--motion-duration-sm) var(--motion-ease-out),
      background-color var(--motion-duration-sm) var(--motion-ease-out),
      border-color var(--motion-duration-sm) var(--motion-ease-out);
    min-height: 0;
    width: 100%;
    position: relative;
    isolation: isolate;
    background: var(--surface-card);
    border: 1px solid var(--surface-card-border);
    box-shadow:
      inset 0 1px 0 rgba(255, 255, 255, 0.04),
      0 10px 20px rgba(0, 0, 0, 0.32);
    backdrop-filter: blur(var(--glass-ultra-thin-blur)) saturate(140%);
    -webkit-backdrop-filter: blur(var(--glass-ultra-thin-blur)) saturate(140%);
  }

  .dock-link::before,
  .dock-link::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    pointer-events: none;
  }

  .dock-link::before {
    inset: 1px;
    background: radial-gradient(circle at 50% 12%, var(--dock-accent-base), rgba(0, 0, 0, 0) 70%);
    opacity: 0.2;
    mix-blend-mode: soft-light;
    transition: opacity var(--motion-duration-sm) var(--motion-ease-out);
  }

  .dock-link::after {
    opacity: 0;
    box-shadow:
      0 0 0 1px rgba(255, 255, 255, 0.12),
      0 0 0 6px var(--dock-focus-ring);
    transition:
      opacity var(--motion-duration-sm) var(--motion-ease-out),
      box-shadow var(--motion-duration-sm) var(--motion-ease-out);
  }
  
  .dock-link:hover {
    transform: translateY(-4px) scale(var(--motion-scale-card));
    background: var(--surface-card-hover);
    border-color: var(--surface-card-border-strong);
    box-shadow:
      inset 0 1px 0 rgba(255, 255, 255, 0.05),
      0 14px 26px rgba(0, 0, 0, 0.38);
  }

  .dock-link:hover::before {
    opacity: 0.32;
    background: radial-gradient(circle at 50% 12%, var(--dock-accent-hover), rgba(0, 0, 0, 0) 70%);
  }
  
  .dock-link:focus-visible {
    outline: none;
  }

  .dock-link:focus-visible::after {
    opacity: 1;
  }
  
  .dock-link:active {
    transform: translateY(-2px) scale(var(--motion-scale-active));
    background: var(--surface-card-active);
  }
  .dock-link[data-tint="blue"] {
    --dock-accent-hover: rgba(10, 132, 255, 0.2);
    --dock-focus-ring: rgba(10, 132, 255, 0.24);
  }

  .dock-link[data-tint="indigo"] {
    --dock-accent-hover: rgba(94, 92, 232, 0.2);
    --dock-focus-ring: rgba(94, 92, 232, 0.24);
  }

  .dock-link[data-tint="teal"] {
    --dock-accent-hover: rgba(95, 212, 255, 0.2);
    --dock-focus-ring: rgba(95, 212, 255, 0.24);
  }

  .dock-link[data-tint="cyan"] {
    --dock-accent-hover: rgba(90, 200, 250, 0.2);
    --dock-focus-ring: rgba(90, 200, 250, 0.24);
  }

  .dock-link[data-tint="green"] {
    --dock-accent-hover: rgba(48, 217, 72, 0.2);
    --dock-focus-ring: rgba(48, 217, 72, 0.24);
  }

  .dock-link[data-tint="orange"] {
    --dock-accent-hover: rgba(255, 160, 13, 0.2);
    --dock-focus-ring: rgba(255, 160, 13, 0.24);
  }

  .dock-link[data-tint="pink"] {
    --dock-accent-hover: rgba(255, 56, 97, 0.2);
    --dock-focus-ring: rgba(255, 56, 97, 0.24);
  }

  .dock-link[data-tint="purple"] {
    --dock-accent-hover: rgba(194, 91, 244, 0.2);
    --dock-focus-ring: rgba(194, 91, 244, 0.24);
  }

  .dock-link[data-tint="red"] {
    --dock-accent-hover: rgba(255, 71, 60, 0.2);
    --dock-focus-ring: rgba(255, 71, 60, 0.24);
  }

  .dock-link[data-tint="yellow"] {
    --dock-accent-hover: rgba(255, 215, 13, 0.2);
    --dock-focus-ring: rgba(255, 215, 13, 0.24);
  }

  .dock-link__name {
    font-size: var(--fs-caption);
    font-weight: var(--fw-semibold);
    color: var(--text-primary);
    text-align: center;
    letter-spacing: var(--ls-caption);
    line-height: var(--lh-tight);
    margin: 0;
  }
  [data-theme="light"] .dock-link {
    background: var(--surface-card);
    border-color: var(--surface-card-border);
    box-shadow:
      inset 0 1px 0 rgba(255, 255, 255, 0.6),
      0 6px 14px rgba(34, 48, 88, 0.14);
  }

  [data-theme="light"] .dock-link:hover {
    border-color: var(--surface-card-border-strong);
  }
  
  
  /* Responsive */
  @media (max-width: 639px) {
    .dock-link {
      padding: var(--space-1) var(--space-2);
      gap: var(--space-1);
    }

    .dock-link__name {
      font-size: var(--fs-footnote);
    }
  }
</style>
