---
interface Props {
  name: string;
  title: string;
  bio?: string;
  avatarSrc?: string;
}

const {
  name = "Tulio Cunha",
  title = "Full Stack Developer",
  bio,
  avatarSrc = "/avatar-placeholder.svg", // Placeholder until provided
} = Astro.props;
---

<section class="profile" data-reveal data-reveal-order="0">
  <div class="profile__avatar">
    <img src={avatarSrc} alt={name} width="160" height="160" />
  </div>
  <h1 class="profile__name">{name}</h1>
  <p class="profile__title">{title}</p>
  {bio && <p class="profile__bio">{bio}</p>}
</section>

<style>
  .profile {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--gap-md);
    padding: var(--profile-padding) var(--container-padding-x);
    max-width: 600px;
    margin: 0 auto;
  }

  .profile__avatar {
    position: relative;
    width: var(--avatar-profile);
    height: var(--avatar-profile);
    border-radius: var(--radius-avatar-lg);
    overflow: hidden;
    border: 1px solid var(--panel-border);
    box-shadow: var(--shadow-card);
    transition: all var(--motion-duration-fast) var(--motion-ease-out);
  }
  
  .profile__avatar:hover {
    transform: scale(var(--motion-scale-sm));
    box-shadow: var(--shadow-card-hover);
    border-color: var(--panel-border-strong);
  }
  
  .profile__avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  
  .profile__name {
    font-size: var(--fs-profile-name);
    font-weight: var(--fw-bold);
    letter-spacing: var(--ls-profile-name);
    line-height: var(--lh-profile-name);
    margin: 0;
    color: var(--text-primary);
  }

  .profile__title {
    font-size: var(--fs-profile-title);
    font-weight: var(--fw-medium);
    color: var(--text-secondary);
    margin: 0;
    letter-spacing: var(--ls-profile-title);
  }

  .profile__bio {
    font-size: var(--fs-profile-bio);
    color: var(--text-secondary);
    margin: 0;
    max-width: 48ch;
    line-height: var(--lh-base);
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .profile {
      padding: var(--space-8) var(--space-4);
      gap: var(--gap-sm);
    }

    .profile__name {
      font-size: var(--fs-profile-name);
    }

    .profile__title {
      font-size: var(--fs-profile-title);
    }
  }
</style>
