---
interface Props {
	tint: string;
	label: string;
	asset?: string;
	size?: "small" | "medium" | "large";
}

const { tint = "blue", label, asset, size = "medium" } = Astro.props;

// Check if this icon needs special sizing (not 100% fill)
const _needsPadding =
	asset &&
	(asset.includes("portfolio") || asset.includes("orbstack") || asset.includes("Containerization"));
---

<div class={`icon-tile icon-tile--${tint} icon-tile--${size}`} aria-label={label}>
	{asset && (
		<img
			src={asset}
			alt={label}
			class={`icon-tile__image ${_needsPadding ? 'icon-tile__image--padded' : ''}`}
			loading="lazy"
			decoding="async"
		/>
	)}
</div>

<style>
  .icon-tile {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 16px;
    overflow: visible;
    flex-shrink: 0;
    transition:
      transform var(--motion-duration-fast) var(--motion-ease-out),
      box-shadow var(--motion-duration-fast) var(--motion-ease-out);
    will-change: transform, box-shadow;
    box-shadow: var(--shadow-symbol-dark);
  }

  /* Hover effects on parent card */
  .card:hover .icon-tile {
    transform: scale(1.05);
  }

  .card:active .icon-tile {
    transform: scale(0.95);
  }

  .icon-tile--small {
    width: 40px;
    height: 40px;
    border-radius: 12px;
  }

  .icon-tile--medium {
    width: 52px;
    height: 52px;
    border-radius: 16px;
  }

  .icon-tile--large {
    width: 64px;
    height: 64px;
    border-radius: 16px;
  }
  
  .icon-tile__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Special sizing for icons that need padding to match other icon styles */
  .icon-tile__image--padded {
    width: 85%;
    height: 85%;
    object-fit: contain;
  }

  .icon-tile::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    border: 1px solid rgba(255, 255, 255, 0.22);
    pointer-events: none;
    mix-blend-mode: screen;
  }
  
  /* Tint backgrounds - Dark mode - 95% opacity solid colors */
  .icon-tile--blue {
    background: rgba(13, 138, 255, 0.95);
    border: 1px solid rgba(13, 138, 255, 1);
  }

  .icon-tile--green {
    background: rgba(48, 217, 72, 0.95);
    border: 1px solid rgba(48, 217, 72, 1);
  }

  .icon-tile--indigo {
    background: rgba(94, 92, 232, 0.95);
    border: 1px solid rgba(94, 92, 232, 1);
  }

  .icon-tile--teal {
    background: rgba(95, 212, 255, 0.95);
    border: 1px solid rgba(95, 212, 255, 1);
  }

  .icon-tile--orange {
    background: rgba(255, 160, 13, 0.95);
    border: 1px solid rgba(255, 160, 13, 1);
  }

  .icon-tile--pink {
    background: rgba(255, 56, 97, 0.95);
    border: 1px solid rgba(255, 56, 97, 1);
  }

  .icon-tile--purple {
    background: rgba(194, 91, 244, 0.95);
    border: 1px solid rgba(194, 91, 244, 1);
  }

  .icon-tile--red {
    background: rgba(255, 71, 60, 0.95);
    border: 1px solid rgba(255, 71, 60, 1);
  }

  .icon-tile--yellow {
    background: rgba(255, 215, 13, 0.95);
    border: 1px solid rgba(255, 215, 13, 1);
  }

  .icon-tile--cyan {
    background: rgba(90, 200, 250, 0.95);
    border: 1px solid rgba(90, 200, 250, 1);
  }

  /* Light mode adjustments - 95% opacity solid colors */
  [data-theme="light"] .icon-tile {
    box-shadow: var(--shadow-symbol-light);
  }

  [data-theme="light"] .icon-tile::after {
    border-color: rgba(255, 255, 255, 0.45);
  }

  [data-theme="light"] .icon-tile--blue {
    background: rgba(0, 122, 255, 0.95);
    border-color: rgba(0, 122, 255, 1);
  }

  [data-theme="light"] .icon-tile--green {
    background: rgba(52, 199, 89, 0.95);
    border-color: rgba(52, 199, 89, 1);
  }

  [data-theme="light"] .icon-tile--indigo {
    background: rgba(88, 86, 214, 0.95);
    border-color: rgba(88, 86, 214, 1);
  }

  [data-theme="light"] .icon-tile--teal {
    background: rgba(90, 200, 250, 0.95);
    border-color: rgba(90, 200, 250, 1);
  }

  [data-theme="light"] .icon-tile--orange {
    background: rgba(255, 149, 0, 0.95);
    border-color: rgba(255, 149, 0, 1);
  }

  [data-theme="light"] .icon-tile--pink {
    background: rgba(255, 45, 85, 0.95);
    border-color: rgba(255, 45, 85, 1);
  }

  [data-theme="light"] .icon-tile--purple {
    background: rgba(175, 82, 222, 0.95);
    border-color: rgba(175, 82, 222, 1);
  }

  [data-theme="light"] .icon-tile--red {
    background: rgba(255, 59, 48, 0.95);
    border-color: rgba(255, 59, 48, 1);
  }

  [data-theme="light"] .icon-tile--yellow {
    background: rgba(255, 204, 0, 0.95);
    border-color: rgba(255, 204, 0, 1);
  }

  [data-theme="light"] .icon-tile--cyan {
    background: rgba(80, 200, 240, 0.95);
    border-color: rgba(80, 200, 240, 1);
  }
</style>
