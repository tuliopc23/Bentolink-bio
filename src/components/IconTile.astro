---
interface Props {
	tint: string;
	label: string;
	asset?: string;
	size?: "small" | "medium" | "large";
}

const { tint = "blue", label, asset, size = "medium" } = Astro.props;

// Check if this icon needs special sizing (not 100% fill)
const _needsPadding =
	asset &&
	(asset.includes("portfolio") || asset.includes("orbstack") || asset.includes("Containerization"));
---

<div class={`icon-tile icon-tile--${tint} icon-tile--${size}`} aria-label={label}>
	{asset && (
		<img
			src={asset}
			alt={label}
			class={`icon-tile__image ${_needsPadding ? 'icon-tile__image--padded' : ''}`}
			loading="lazy"
			decoding="async"
		/>
	)}
</div>

<style>
  .icon-tile {
    --icon-color: var(--accent-tint);
    --icon-border: var(--accent-border);
    --icon-highlight: rgba(255, 255, 255, 0.12);
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 16px;
    overflow: visible;
    flex-shrink: 0;
    isolation: isolate;
    background: var(--icon-color);
    border: 1px solid color-mix(in srgb, var(--icon-border) 60%, rgba(255, 255, 255, 0.35));
    transition:
      transform var(--motion-duration-fast) var(--motion-ease-out),
      box-shadow var(--motion-duration-fast) var(--motion-ease-out);
    will-change: transform, box-shadow;
    box-shadow:
      var(--shadow-symbol-dark),
      0 0 20px color-mix(in srgb, var(--icon-border) 15%, transparent);
  }

  /* Hover effects on parent card */
  .card:hover .icon-tile,
  .dock-link:hover .icon-tile {
    transform: scale(1.05);
    border: 1px solid color-mix(in srgb, var(--icon-border) 75%, rgba(255, 255, 255, 0.45));
    box-shadow:
      var(--shadow-symbol-dark-hover),
      0 0 30px color-mix(in srgb, var(--icon-border) 25%, transparent);
  }

  .card:active .icon-tile,
  .dock-link:active .icon-tile {
    transform: scale(0.95);
  }

  .icon-tile--small {
    width: 40px;
    height: 40px;
    border-radius: 12px;
  }

  .icon-tile--medium {
    width: 52px;
    height: 52px;
    border-radius: 16px;
  }

  .icon-tile--large {
    width: 64px;
    height: 64px;
    border-radius: 16px;
  }
  
  .icon-tile__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Special sizing for icons that need padding to match other icon styles */
  .icon-tile__image--padded {
    width: 85%;
    height: 85%;
    object-fit: contain;
  }

  .icon-tile::before,
  .icon-tile::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    pointer-events: none;
  }

  .icon-tile::before {
    inset: 1px;
    background: radial-gradient(circle at 50% 18%, var(--icon-highlight), rgba(0, 0, 0, 0) 70%);
    opacity: 0.24;
    mix-blend-mode: soft-light;
  }

  .icon-tile::after {
    border: 1px solid rgba(255, 255, 255, 0.12);
    mix-blend-mode: overlay;
  }
  
  /* Tint backgrounds - Dark mode */
  .icon-tile--blue {
    --icon-color: rgba(10, 132, 255, 0.95);
    --icon-border: rgba(10, 132, 255, 0.95);
  }

  .icon-tile--green {
    --icon-color: rgba(48, 217, 72, 0.95);
    --icon-border: rgba(48, 217, 72, 0.95);
  }

  .icon-tile--indigo {
    --icon-color: rgba(94, 92, 232, 0.95);
    --icon-border: rgba(94, 92, 232, 0.95);
  }

  .icon-tile--teal {
    --icon-color: rgba(95, 212, 255, 0.95);
    --icon-border: rgba(95, 212, 255, 0.95);
  }

  .icon-tile--orange {
    --icon-color: rgba(255, 160, 13, 0.95);
    --icon-border: rgba(255, 160, 13, 0.95);
  }

  .icon-tile--pink {
    --icon-color: rgba(255, 56, 97, 0.95);
    --icon-border: rgba(255, 56, 97, 0.95);
  }

  .icon-tile--purple {
    --icon-color: rgba(194, 91, 244, 0.95);
    --icon-border: rgba(194, 91, 244, 0.95);
  }

  .icon-tile--red {
    --icon-color: rgba(255, 71, 60, 0.95);
    --icon-border: rgba(255, 71, 60, 0.95);
  }

  .icon-tile--yellow {
    --icon-color: rgba(255, 215, 13, 0.95);
    --icon-border: rgba(255, 215, 13, 0.95);
  }

  .icon-tile--cyan {
    --icon-color: rgba(90, 200, 250, 0.95);
    --icon-border: rgba(90, 200, 250, 0.95);
  }

  /* Light mode adjustments - 95% opacity solid colors */
  [data-theme="light"] .icon-tile {
    border: 1px solid color-mix(in srgb, var(--icon-border) 45%, rgba(34, 48, 88, 0.2));
    box-shadow: var(--shadow-symbol-light);
  }

  [data-theme="light"] .icon-tile::before {
    opacity: 0.18;
  }

  [data-theme="light"] .icon-tile::after {
    border-color: rgba(255, 255, 255, 0.45);
    mix-blend-mode: normal;
  }

  [data-theme="light"] .icon-tile--blue {
    --icon-color: rgba(0, 122, 255, 0.95);
    --icon-border: rgba(0, 122, 255, 1);
  }

  [data-theme="light"] .icon-tile--green {
    --icon-color: rgba(52, 199, 89, 0.95);
    --icon-border: rgba(52, 199, 89, 1);
  }

  [data-theme="light"] .icon-tile--indigo {
    --icon-color: rgba(88, 86, 214, 0.95);
    --icon-border: rgba(88, 86, 214, 1);
  }

  [data-theme="light"] .icon-tile--teal {
    --icon-color: rgba(90, 200, 250, 0.95);
    --icon-border: rgba(90, 200, 250, 1);
  }

  [data-theme="light"] .icon-tile--orange {
    --icon-color: rgba(255, 149, 0, 0.95);
    --icon-border: rgba(255, 149, 0, 1);
  }

  [data-theme="light"] .icon-tile--pink {
    --icon-color: rgba(255, 45, 85, 0.95);
    --icon-border: rgba(255, 45, 85, 1);
  }

  [data-theme="light"] .icon-tile--purple {
    --icon-color: rgba(175, 82, 222, 0.95);
    --icon-border: rgba(175, 82, 222, 1);
  }

  [data-theme="light"] .icon-tile--red {
    --icon-color: rgba(255, 59, 48, 0.95);
    --icon-border: rgba(255, 59, 48, 1);
  }

  [data-theme="light"] .icon-tile--yellow {
    --icon-color: rgba(255, 204, 0, 0.95);
    --icon-border: rgba(255, 204, 0, 1);
  }

  [data-theme="light"] .icon-tile--cyan {
    --icon-color: rgba(80, 200, 240, 0.95);
    --icon-border: rgba(80, 200, 240, 1);
  }
</style>
