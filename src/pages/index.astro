---
import DockLink from "../components/DockLink.astro";
import FeatureWritingWidget from "../components/FeatureWritingWidget";
import GitHubActivity from "../components/GitHubActivity";
import ProfileCard from "../components/ProfileCard.astro";
import Base from "../layouts/Base.astro";
import { fetchLatestPosts } from "../services/sanity";

// Fetch blog posts server-side
const blogPosts = await fetchLatestPosts(3);

const socialLinks = [
	{
		title: "My Website",
		href: "https://tuliocunha.dev",
		tint: "teal",
		iconAsset: "/icons/website.svg",
	},
	{
		title: "My Portfolio",
		href: "https://portfolio.tuliocunha.dev",
		tint: "cyan",
		iconAsset: "/icons/portfolio-macos.svg",
	},
	{
		title: "Linkedin",
		href: "https://linkedin.com/in/tuliocunha",
		tint: "blue",
		iconAsset: "/icons/linkedin-light.svg",
	},
	{
		title: "Instagram",
		href: "https://instagram.com/tuliopinheirocunha",
		tint: "pink",
		iconAsset: "/icons/instagram-light.svg",
	},
	{
		title: "Fiverr",
		href: "https://www.fiverr.com/tuliopc",
		tint: "green",
		iconAsset: "/icons/fiverr.svg",
	},
	{
		title: "Book a meeting",
		href: "https://cal.com/tuliopinheirocunha",
		tint: "orange",
		iconAsset: "/icons/calendar-light.svg",
	},
];

const toolLinks = [
	{
		title: "Ghostty",
		href: "https://ghostty.org",
		tint: "blue",
		iconAsset: "/icons/Ghostty Dark_upscayl_2x_digital-art-4x_wrapped.svg",
	},
	{
		title: "Neovim",
		href: "https://neovim.io",
		tint: "green",
		iconAsset: "/icons/neovimlight_upscayl_2x_digital-art-4x_wrapped.svg",
	},
	{
		title: "Xcode",
		href: "https://developer.apple.com/xcode/",
		tint: "blue",
		iconAsset: "/icons/xcodelogh_upscayl_2x_digital-art-4x copy.svg",
	},
	{
		title: "Containers",
		href: "https://support.apple.com/guide/terminal/welcome/mac",
		tint: "cyan",
		iconAsset: "/icons/Apple Containerization_upscayl_2x_digital-art-4x.svg",
	},
	{
		title: "Transmit",
		href: "https://panic.com/transmit/",
		tint: "yellow",
		iconAsset: "/icons/Transmit_upscayl_2x_digital-art-4x.svg",
	},
	{
		title: "Tower",
		href: "https://www.git-tower.com",
		tint: "orange",
		iconAsset: "/icons/Tower.svg",
	},
	{
		title: "CodeEdit",
		href: "https://www.codeedit.app",
		tint: "blue",
		iconAsset: "/icons/Codeedit_upscayl_2x_digital-art-4x_wrapped.svg",
	},
	{
		title: "OrbStack",
		href: "https://orbstack.dev",
		tint: "indigo",
		iconAsset: "/icons/orbstack.svg",
	},
];
---

<Base
  title="Tulio Cunha"
  description="Full Stack Developer - Building elegant solutions with code. Connect with me on GitHub, LinkedIn, and more."
>
  <section class="bento-grid">
    <ProfileCard
      name="Tulio Cunha"
      title="Full Stack Developer"
      bio=". Command Line Junkie . Mac Head . Unix Enthusiast . Tool Addict."
      avatarSrc="/my photo.png"
      email="contact@tuliocunha.dev"
      location="Brazil"
      socialLinks={socialLinks}
    />

    <div class="widget-box widget-tools" data-reveal data-reveal-order="1">
      <div class="widget-header">
        <span class="widget-eyebrow">Toolkit</span>
        <h2 class="widget-title">Tools</h2>
        <p class="widget-caption">macOS utilities that stay docked.</p>
      </div>
      <div class="tools-grid" role="list" aria-label="Tools">
        {toolLinks.map((link, index) => (
          <DockLink
            href={link.href}
            title={link.title}
            tint={link.tint}
            iconAsset={link.iconAsset}
            revealOrder={1 + index * 0.08}
          />
        ))}
      </div>
    </div>

    <div class="widget-box widget-github" data-reveal data-reveal-order="2">
      <div class="widget-header">
        <span class="widget-eyebrow">Activity</span>
        <h2 class="widget-title">GitHub</h2>
        <p class="widget-caption">Latest commits and streaks.</p>
      </div>
      <GitHubActivity username="tuliopc23" client:load />
    </div>

    <div class="widget-box widget-feature-writing" data-reveal data-reveal-order="3">
      <div class="widget-header">
        <span class="widget-eyebrow">Writing</span>
        <h2 class="widget-title">Feature Writing</h2>
        <p class="widget-caption">Fresh perspectives from the lab.</p>
      </div>
      <FeatureWritingWidget posts={blogPosts} client:load />
    </div>
  </section>
</Base>

<style is:global>
  .bento-grid {
    padding: clamp(32px, 6vw, 60px) var(--container-padding);
    max-width: 1280px;
    margin: 0 auto;
    display: grid;
    gap: clamp(20px, 2.6vw, 32px);
    grid-template-columns: repeat(12, minmax(0, 1fr));
    align-items: stretch;
  }

  .bento-grid > [data-reveal]:not(.is-visible) {
    opacity: 0;
    transform: translateY(24px);
  }

  .bento-grid > [data-reveal].is-visible {
    opacity: 1;
    transform: translateY(0);
    transition: transform var(--motion-duration-spring-sm) var(--spring-smooth),
                opacity var(--motion-duration-sm) var(--motion-ease-out);
  }

  .widget-box {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: clamp(var(--space-4), 2vw, var(--space-5));
    padding: clamp(24px, 2.8vw, 32px);
    background: var(--surface-elevated);
    background: color-mix(in srgb, var(--surface-elevated) 96%, transparent);
    border: 1px solid var(--panel-border);
    border-radius: 36px;
    box-shadow: var(--shadow-card), var(--shadow-card-highlight);
    backdrop-filter: blur(var(--glass-regular-blur)) saturate(var(--glass-saturation-base));
    -webkit-backdrop-filter: blur(var(--glass-regular-blur)) saturate(var(--glass-saturation-base));
    overflow: hidden;
    z-index: 0;
    transition: transform var(--motion-duration-spring-sm) var(--spring-smooth),
                border-color var(--motion-duration-sm) var(--motion-ease-out),
                box-shadow var(--motion-duration-sm) var(--motion-ease-out);
    grid-column: span 6;
  }

  .widget-box::before {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.08), transparent 80%);
    mix-blend-mode: screen;
    pointer-events: none;
    opacity: 0.6;
  }

  .widget-box:hover {
    transform: translateY(-6px);
    border-color: var(--panel-border-strong);
    box-shadow: var(--shadow-card-hover), var(--shadow-card-highlight), var(--shadow-card-glow);
  }

  .widget-header {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .widget-eyebrow {
    font-size: var(--fs-eyebrow);
    letter-spacing: var(--ls-eyebrow);
    text-transform: uppercase;
    font-weight: var(--fw-medium);
    color: var(--text-secondary);
  }

  .widget-title {
    font-size: var(--fs-title-2);
    font-weight: 700;
    letter-spacing: var(--ls-title);
    margin: 0;
    color: var(--text-primary);
  }

  .widget-caption {
    font-size: var(--fs-subheadline);
    color: var(--text-tertiary);
    letter-spacing: var(--ls-caption);
    margin: 0;
    max-width: 42ch;
  }

  .widget-tools {
    grid-column: span 6;
  }

  .widget-github {
    grid-column: span 6;
  }

  .widget-feature-writing {
    grid-column: 1 / -1;
  }

  .tools-grid {
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: clamp(var(--space-3), 1.4vw, var(--space-4));
  }

  .github-widget {
    display: flex;
    flex-direction: column;
  }

  .github-commits-list {
    display: flex;
    flex-direction: column;
    gap: 0;
    border-radius: 32px;
    background: var(--surface-translucent-2);
    background: color-mix(in srgb, var(--surface-translucent-2) 94%, transparent);
    border: 1px solid rgba(140, 170, 240, 0.18);
    overflow: hidden;
    box-shadow: var(--shadow-0), inset 0 1px 0 rgba(255, 255, 255, 0.04);
    backdrop-filter: blur(var(--glass-regular-blur)) saturate(var(--glass-saturation-base));
    -webkit-backdrop-filter: blur(var(--glass-regular-blur)) saturate(var(--glass-saturation-base));
  }

  .commit-item {
    position: relative;
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: 14px 16px 14px 12px;
    text-decoration: none;
    border-bottom: 1px solid rgba(140, 170, 240, 0.12);
    background: transparent;
    transition: background-color var(--motion-duration-sm) var(--motion-ease-out),
                transform var(--motion-duration-spring-xs) var(--spring-snappy);
    animation: slideIn 0.4s var(--spring-smooth) backwards;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(-8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .commit-item:last-child {
    border-bottom: none;
  }

  .commit-item::before {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(90deg, rgba(120, 175, 255, 0.08), transparent 40%);
    opacity: 0;
    transition: opacity var(--motion-duration-sm) var(--motion-ease-out);
    pointer-events: none;
  }

  .commit-item:hover {
    background: rgba(120, 175, 255, 0.04);
  }

  .commit-item:hover::before {
    opacity: 1;
  }

  .commit-item:active {
    transform: scale(0.995);
  }

  .commit-item__indicator {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(64, 156, 255, 0.9), rgba(10, 132, 255, 0.7));
    box-shadow: 0 0 8px rgba(64, 156, 255, 0.4), 0 0 16px rgba(64, 156, 255, 0.2);
    flex-shrink: 0;
    transition: all var(--motion-duration-sm) var(--motion-ease-out);
  }

  .commit-item:hover .commit-item__indicator {
    transform: scale(1.3);
    box-shadow: 0 0 12px rgba(64, 156, 255, 0.6), 0 0 24px rgba(64, 156, 255, 0.3);
  }

  .commit-item__content {
    display: flex;
    flex-direction: column;
    gap: 6px;
    min-width: 0;
    flex: 1;
  }

  .commit-item__message {
    font-size: var(--fs-body);
    font-weight: var(--fw-semibold);
    color: var(--text-primary);
    line-height: 1.4;
    letter-spacing: -0.01em;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    transition: color var(--motion-duration-sm) var(--motion-ease-out);
  }

  .commit-item:hover .commit-item__message {
    color: var(--color-primary);
  }

  .commit-item__meta {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 11px;
    color: var(--text-tertiary);
    letter-spacing: 0.01em;
    flex-wrap: wrap;
  }

  .commit-item__repo {
    font-family: var(--font-mono);
    font-weight: var(--fw-medium);
    color: var(--text-secondary);
    font-size: 10px;
    padding: 2px 6px;
    border-radius: 6px;
    background: rgba(120, 175, 255, 0.08);
  }

  .commit-item__divider {
    opacity: 0.4;
    font-size: 8px;
  }

  .commit-item__time {
    opacity: 0.75;
    font-weight: var(--fw-medium);
  }

  .commit-item__sha {
    font-family: var(--font-mono);
    font-size: 10px;
    opacity: 0.5;
    margin-left: auto;
  }

  .commit-item__arrow {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    border-radius: 8px;
    background: rgba(120, 175, 255, 0.08);
    color: var(--text-tertiary);
    flex-shrink: 0;
    opacity: 0;
    transform: translateX(-4px);
    transition: all var(--motion-duration-sm) var(--motion-ease-out);
  }

  .commit-item:hover .commit-item__arrow {
    opacity: 1;
    transform: translateX(0);
    background: rgba(120, 175, 255, 0.15);
    color: var(--color-primary);
  }

  .commit-item__arrow svg {
    width: 14px;
    height: 14px;
  }

  .github-loading {
    display: flex;
    flex-direction: column;
    gap: 0;
    border-radius: 32px;
    overflow: hidden;
    background: var(--surface-translucent-2);
    border: 1px solid rgba(140, 170, 240, 0.16);
  }

  .github-skeleton {
    height: 64px;
    background: linear-gradient(
      90deg,
      rgba(120, 140, 200, 0.08) 0%,
      rgba(200, 210, 240, 0.16) 50%,
      rgba(120, 140, 200, 0.08) 100%
    );
    background-size: 200% 100%;
    animation: shimmer 1.8s ease-in-out infinite;
    border-bottom: 1px solid rgba(140, 170, 240, 0.08);
  }

  .github-skeleton:last-child {
    border-bottom: none;
  }

  @keyframes shimmer {
    0% {
      background-position: 200% 0;
    }
    100% {
      background-position: -200% 0;
    }
  }

  .articles-carousel {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: clamp(var(--space-4), 1.6vw, var(--space-5));
  }

  .articles-track {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: clamp(var(--space-4), 1.8vw, var(--space-5));
  }

  .article-card {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    padding: clamp(22px, 2.1vw, 28px);
    border-radius: 36px;
    border: 1px solid rgba(140, 170, 240, 0.18);
    background: var(--surface-translucent-2);
    background: color-mix(in srgb, var(--surface-translucent-2) 92%, transparent);
    box-shadow: var(--shadow-card), var(--shadow-card-highlight);
    text-decoration: none;
    min-height: 100%;
    transition: transform var(--motion-duration-spring-sm) var(--spring-smooth),
                border-color var(--motion-duration-sm) var(--motion-ease-out),
                box-shadow var(--motion-duration-sm) var(--motion-ease-out);
  }

  .article-card::before {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: radial-gradient(120% 120% at 30% 0%, rgba(90, 150, 255, 0.18), transparent 70%);
    opacity: 0;
    pointer-events: none;
    transition: opacity var(--motion-duration-sm) var(--motion-ease-out);
  }

  .article-card:hover {
    transform: translateY(-6px);
    border-color: rgba(120, 175, 255, 0.35);
    box-shadow: var(--shadow-card-hover), var(--shadow-card-highlight), var(--shadow-card-glow);
  }

  .article-card:hover::before {
    opacity: 1;
  }

  .article-card__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-2);
  }

  .article-card__eyebrow {
    font-size: var(--fs-eyebrow);
    letter-spacing: var(--ls-eyebrow);
    text-transform: uppercase;
    color: var(--text-tertiary);
  }

  .article-card__badge {
    display: inline-flex;
    align-items: center;
    padding: 4px 12px;
    border-radius: 999px;
    font-size: var(--fs-footnote);
    font-weight: var(--fw-semibold);
    letter-spacing: var(--ls-caption);
    background: rgba(64, 156, 255, 0.18);
    color: var(--color-primary);
  }

  .article-card__title {
    font-size: var(--fs-title-3);
    font-weight: 700;
    letter-spacing: var(--ls-title);
    line-height: var(--lh-heading);
    margin: 0;
    color: var(--text-primary);
  }

  .article-card__excerpt {
    font-size: var(--fs-body);
    color: var(--text-secondary);
    margin: 0;
    line-height: var(--lh-base);
  }

  .article-card__footer {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--fs-footnote);
    color: var(--text-tertiary);
    letter-spacing: var(--ls-caption);
    margin-top: auto;
  }

  .article-card__cta {
    margin-left: auto;
    font-weight: var(--fw-semibold);
    color: var(--link);
  }

  .articles-carousel--loading {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: clamp(var(--space-4), 1.8vw, var(--space-5));
  }

  .article-card-skeleton {
    height: 220px;
    border-radius: 36px;
    background: linear-gradient(90deg, rgba(120, 140, 200, 0.16) 0%, rgba(200, 210, 240, 0.24) 50%, rgba(120, 140, 200, 0.16) 100%);
    animation: shimmer 1.5s linear infinite;
  }

  @keyframes shimmer {
    0% { background-position: -200% 0; }
    100% { background-position: 200% 0; }
  }

  @media (max-width: 1199px) {
    .bento-grid {
      grid-template-columns: repeat(8, minmax(0, 1fr));
    }

    .widget-tools,
    .widget-github {
      grid-column: span 8;
    }

    .tools-grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }

  @media (max-width: 1023px) {
    .articles-track {
      display: flex;
      gap: var(--space-4);
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      padding-bottom: 12px;
      margin-inline: -12px;
      padding-inline: 12px;
    }

    .article-card {
      flex: 0 0 82%;
      scroll-snap-align: start;
    }
  }

  @media (max-width: 767px) {
    .bento-grid {
      grid-template-columns: 1fr;
      gap: 18px;
      padding: 24px 16px 80px;
    }

    .widget-box {
      grid-column: 1 / -1;
      padding: 24px;
    }

    .widget-header {
      gap: var(--space-1);
    }

    .tools-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    .commit-item {
      padding: 12px 14px 12px 10px;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .widget-box,
    .github-card,
    .github-commit,
    .article-card {
      transition: none !important;
      transform: none !important;
    }
  }
</style>
