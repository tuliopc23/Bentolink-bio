	{
		title: "OrbStack",
		href: "https://orbstack.dev",
		tint: "indigo",
		iconAsset: "/icons/orbstack.svg",
	},
];

const sectionNavItems = [
	{
		id: "section-profile",
		label: "Profile",
		headingId: "heading-profile",
	},
	{
		id: "section-tools",
		label: "Tools",
		headingId: "heading-tools",
	},
	{
		id: "section-github",
		label: "GitHub",
		headingId: "heading-github",
	},
	{
		id: "section-writing",
		label: "Writing",
		headingId: "heading-writing",
	},
];
---

<Base
  title="Tulio Cunha"
  description="Full Stack Developer - Building elegant solutions with code. Connect with me on GitHub, LinkedIn, and more."
>
  <section class="bento-grid">
    <ProfileCard
      sectionId="section-profile"
      headingId="heading-profile"
      name="Tulio Cunha"
      title="Full Stack Developer"
      bio=". Command Line Junkie . Mac Head . Unix Enthusiast . Tool Addict."
      avatarSrc="/my photo.png"
      email="contact@tuliocunha.dev"
      location="Brazil"
      socialLinks={socialLinks}
    />

    <SectionQuickNav sections={sectionNavItems} heroSectionId="section-profile" />

    <ScrollCTA />

    <div class="widget-carousel" role="region" aria-label="Widget carousel">
      <div
        id="section-tools"
        class="widget-box widget-tools hover-elevate"
        data-reveal
        data-reveal-order="1"
        aria-labelledby="heading-tools"
        role="region"
      >
        <div class="widget-header">
          <span class="widget-eyebrow icon-text-group">
            <i class="ph ph-wrench icon--decorative icon--label" aria-hidden="true"></i>
            Toolkit
          </span>
          <h2 id="heading-tools" class="widget-title icon-text-group" tabindex="-1">
            Tools
            <i class="ph ph-toolbox icon--heading" aria-hidden="true"></i>
          </h2>
          <p class="widget-caption">macOS utilities that stay docked.</p>
        </div>
        <div class="tools-grid" role="list" aria-label="Tools">
          {toolLinks.map((link, index) => (
            <DockLink
              href={link.href}
              title={link.title}
              tint={link.tint}
              iconAsset={link.iconAsset}
              revealOrder={1 + index * 0.08}
            />
          ))}
        </div>
      </div>

      <div
        id="section-github"
        class="widget-box widget-github hover-elevate"
        data-reveal
        data-reveal-order="2"
        aria-labelledby="heading-github"
        role="region"
      >
        <div class="widget-header">
          <span class="widget-eyebrow icon-text-group">
            <i class="ph ph-chart-bar icon--decorative icon--label" aria-hidden="true"></i>
            Activity
          </span>
          <h2 id="heading-github" class="widget-title icon-text-group" tabindex="-1">
            <a
              href="https://github.com/tuliopc23"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Open GitHub profile (new tab)"
              style="text-decoration: none; color: inherit; cursor: pointer; transition: all var(--motion-duration-base) var(--motion-ease-smooth);"
            >
              GitHub
            </a>
            <i class="ph ph-github-logo icon--heading" aria-hidden="true"></i>
          </h2>
          <p class="widget-caption">Latest commits and streaks.</p>
        </div>
        <GitHubActivity username="tuliopc23" client:load />
      </div>

      <div
        id="section-writing"
        class="widget-box widget-feature-writing hover-elevate"
        data-reveal
        data-reveal-order="3"
        aria-labelledby="heading-writing"
        role="region"
      >
        <div class="widget-header">
          <span class="widget-eyebrow icon-text-group">
            <i class="ph ph-article icon--decorative icon--label" aria-hidden="true"></i>
            Writing
          </span>
          <h2 id="heading-writing" class="widget-title icon-text-group" tabindex="-1">
            Feature Writing
            <i class="ph ph-newspaper icon--heading" aria-hidden="true"></i>
          </h2>
          <p class="widget-caption">Fresh perspectives from the lab.</p>
        </div>
        <FeatureWritingWidget posts={blogPosts} client:load />
      </div>
    </div>

    <ScrollIndicator widgetCount={3} />
  </section>
</Base>

<script>
  import '../scripts/carousel-handler';
</script>

<style is:global>
  .bento-grid {
    padding: clamp(32px, 6vw, 60px) var(--container-padding);
    max-width: 1280px;
    margin: 0 auto;
    display: grid;
    gap: clamp(20px, 2.6vw, 32px);
    grid-template-columns: repeat(12, minmax(0, 1fr));
    align-items: stretch;
  }

  #section-profile,
  #section-tools,
  #section-github,
  #section-writing {
    scroll-margin-top: clamp(72px, 10vh, 120px);
  }

  .bento-grid > [data-reveal] {
    opacity: 1;
    transform: translateY(0);
    transition: transform var(--motion-duration-spring-sm) var(--spring-smooth),
                opacity var(--motion-duration-sm) var(--motion-ease-out);
  }

  /* Widget carousel container - desktop acts as grid container */
  .widget-carousel {
    display: contents;
    grid-column: 1 / -1;
  }

  .widget-box {
    --hover-elevate-translate: -6px;
    --hover-elevate-scale: 1.015;
    --hover-elevate-shadow:
      var(--shadow-card-hover),
      var(--shadow-card-highlight),
      var(--shadow-card-glow),
      0 0 0 1px rgba(255, 255, 255, 0.08),
      0 0 100px rgba(10, 132, 255, 0.08);
    --hover-elevate-border: var(--panel-border-strong);
    position: relative;
    display: flex;
    flex-direction: column;
    gap: clamp(var(--space-4), 2vw, var(--space-5));
    padding: clamp(24px, 2.8vw, 32px);
    background: var(--surface-elevated);
    background: color-mix(in srgb, var(--surface-elevated) 96%, transparent);
    border: 1px solid var(--panel-border);
    border-radius: 36px;
    box-shadow:
      var(--shadow-card),
      var(--shadow-card-highlight),
      0 0 0 1px rgba(255, 255, 255, 0.04),
      0 0 60px rgba(10, 132, 255, 0.03);
    backdrop-filter: blur(var(--glass-regular-blur)) saturate(var(--glass-saturation-base));
    -webkit-backdrop-filter: blur(var(--glass-regular-blur)) saturate(var(--glass-saturation-base));
    overflow: hidden;
    z-index: 0;
    transition:
      transform var(--motion-duration-base) var(--spring-smooth),
      border-color var(--motion-duration-fast) var(--motion-ease-out),
      box-shadow var(--motion-duration-base) var(--motion-ease-out),
      opacity var(--motion-duration-fast) var(--motion-ease-out);
    grid-column: span 6;
  }

  .widget-box::before {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.08), transparent 80%);
    mix-blend-mode: screen;
    pointer-events: none;
    opacity: 0.6;
  }

  .widget-header {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .widget-eyebrow {
    font-size: var(--fs-eyebrow);
    letter-spacing: var(--ls-eyebrow);
    text-transform: uppercase;
    font-weight: var(--fw-medium);
    color: var(--text-secondary);
  }

  .widget-title {
    font-size: var(--fs-title-2);
    font-weight: 700;
    letter-spacing: var(--ls-title);
    margin: 0;
    color: var(--text-primary);
  }

  .widget-caption {
    font-size: var(--fs-subheadline);
    color: var(--text-tertiary);
    letter-spacing: var(--ls-caption);
    margin: 0;
    max-width: 42ch;
  }

  .widget-tools {
    grid-column: span 6;
  }

  .widget-github {
    grid-column: span 6;
  }

  .widget-feature-writing {
    grid-column: 1 / -1;
  }

  .tools-grid {
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: clamp(var(--space-3), 1.4vw, var(--space-4));
  }



  @media (max-width: 1199px) {
    .bento-grid {
      grid-template-columns: repeat(8, minmax(0, 1fr));
    }

    .widget-tools,
    .widget-github {
      grid-column: span 8;
    }

    .tools-grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }

  @media (max-width: 767px) {
    /* Enhanced scroll container */
    html {
      scroll-behavior: smooth;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }

    body {
      overscroll-behavior-y: contain;
      -webkit-overflow-scrolling: touch;
    }

    .bento-grid {
      grid-template-columns: 1fr;
      gap: 18px;
      padding: 24px 16px 80px;
      /* Allow vertical scrolling on entire grid */
      touch-action: pan-y pinch-zoom;
      overflow-y: visible;
    }

    .widget-box {
      grid-column: 1 / -1;
      padding: 24px;
    }

    .widget-header {
      gap: var(--space-1);
    }

    .tools-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      /* Allow touch on grid items */
      touch-action: auto;
    }

    .commit-item {
      padding: 14px 16px 14px 12px;
    }

    /* ========== Enhanced Mobile Carousel ========== */
    .widget-carousel {
      display: flex;
      position: relative;
      overflow-x: auto;
      overflow-y: visible;
      
      /* Smooth scroll snapping */
      scroll-snap-type: x mandatory;
      scroll-behavior: smooth;
      
      /* iOS momentum scrolling */
      -webkit-overflow-scrolling: touch;
      
      /* Enhanced overscroll behavior - allow vertical scroll through */
      overscroll-behavior-x: contain;
      overscroll-behavior-y: auto;
      
      gap: 18px;
      padding: 8px calc((100vw - 85vw) / 2) 8px calc((100vw - 85vw) / 2);
      margin: -8px calc(-1 * (100vw - 85vw) / 2);
      
      /* Performance optimizations */
      will-change: scroll-position;
      transform: translateZ(0);
      -webkit-transform: translateZ(0);
      
      /* Hide scrollbars while maintaining functionality */
      scrollbar-width: none;
      -ms-overflow-style: none;
      
      /* Scroll padding for proper centering and end spacing */
      scroll-padding: calc((100vw - 85vw) / 2);
      
      /* Critical: Allow both horizontal carousel scroll AND vertical page scroll */
      touch-action: auto;
    }
    
    /* Hide scrollbar for WebKit browsers */
    .widget-carousel::-webkit-scrollbar {
      display: none;
      width: 0;
      height: 0;
    }

    .widget-carousel .widget-box {
      flex: 0 0 85vw;
      scroll-snap-align: center;
      scroll-snap-stop: normal;
      grid-column: auto;
      
      /* Smooth GPU acceleration */
      transform: translateZ(0);
      -webkit-transform: translateZ(0);
      backface-visibility: hidden;
      -webkit-backface-visibility: hidden;
    }

    /* ========== Touch Optimizations ========== */

    /* Prevent text selection while swiping */
    .widget-carousel {
      -webkit-user-select: none;
      user-select: none;
    }

    /* Allow normal interaction on interactive elements */
    .scroll-cta,
    .scroll-indicator__dot,
    .widget-box a,
    .widget-box button,
    .commit-item,
    .dock-link,
    .profile-card__contact {
      touch-action: manipulation;
      -webkit-user-select: auto;
      user-select: auto;
    }

    /* Remove tap highlight on non-interactive elements */
    .widget-box,
    .scroll-cta,
    .scroll-indicator__dot {
      -webkit-tap-highlight-color: transparent;
    }

    /* Prevent image dragging during swipe */
    .widget-box img,
    .profile-card img {
      -webkit-user-drag: none;
      user-drag: none;
      pointer-events: none;
    }

    /* GPU-accelerated animations for smoothness */
    .widget-box,
    .scroll-cta,
    .scroll-indicator__dot-inner,
    .profile-card {
      will-change: transform;
      transform: translateZ(0);
      -webkit-transform: translateZ(0);
    }

    /* Enhanced touch feedback with subtle scale */
    .widget-box:active,
    .commit-item:active {
      transform: scale(0.985) translateZ(0);
      opacity: 0.96;
      transition-duration: 50ms;
      transition-timing-function: ease-out;
    }

    /* Improve tap targets - minimum 44x44pt */
    .commit-item,
    .dock-link,
    .profile-card__contact {
      min-height: 44px;
      min-width: 44px;
    }

    /* Prevent double-tap zoom on buttons and links */
    button,
    a {
      touch-action: manipulation;
    }
  }

  /* Touch device focus rings */
  @media (hover: none) and (pointer: coarse) {
    .widget-box:focus-visible,
    .scroll-cta:focus-visible,
    .scroll-indicator__dot:focus-visible,
    a:focus-visible,
    button:focus-visible {
      outline-width: 3px;
      outline-offset: 4px;
      outline-color: var(--blue);
    }
  }

  /* Pointer device focus rings (standard) */
  @media (hover: hover) and (pointer: fine) {
    .widget-box:focus-visible,
    a:focus-visible,
    button:focus-visible {
      outline-width: 2px;
      outline-offset: 2px;
      outline-color: var(--blue);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .widget-box,
    .github-card,
    .github-commit {
      transition: none !important;
      transform: none !important;
    }

    .widget-carousel {
      scroll-behavior: auto;
    }
  }
</style>
