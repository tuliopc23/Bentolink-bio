---
import DockLink from "../components/DockLink.astro";
import FeatureWritingWidget from "../components/FeatureWritingWidget";
import GitHubActivity from "../components/GitHubActivity";
import ProfileCard from "../components/ProfileCard.astro";
import ScrollCTA from "../components/ScrollCTA.astro";
import ScrollIndicator from "../components/ScrollIndicator.astro";
import SectionQuickNav from "../components/SectionQuickNav.astro";
import Base from "../layouts/Base.astro";
import { fetchLatestPosts } from "../services/sanity";

// Fetch blog posts server-side
const blogPosts = await fetchLatestPosts(3);

const socialLinks = [
