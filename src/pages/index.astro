---
import Base from '../layouts/Base.astro';
import ProfileHeader from '../components/ProfileHeader.astro';
import ContactWidget from '../components/ContactWidget.astro';
import DockLink from '../components/DockLink.astro';

const socialLinks = [
  {
    title: "My Website",
    href: "#",
    tint: "purple",
    iconAsset: "/icons/website-placeholder.svg",
  },
  {
    title: "My Portfolio",
    href: "https://portfolio.tuliocunha.dev",
    tint: "cyan",
    iconAsset: "/icons/portfolio-macos.svg",
  },
  {
    title: "Linkedin",
    href: "https://linkedin.com/in/tuliocunha",
    tint: "blue",
    iconAsset: "/icons/linkedin-light.svg",
  },
  {
    title: "Instagram",
    href: "https://instagram.com/tuliopinheirocunha",
    tint: "pink",
    iconAsset: "/icons/instagram-light.svg",
  },
  {
    title: "Fiverr",
    href: "https://www.fiverr.com/tuliopc",
    tint: "green",
    iconAsset: "/icons/fiverr.svg",
  },
  {
    title: "Book a meeting",
    href: "https://cal.com/tuliopinheirocunha",
    tint: "teal",
    iconAsset: "/icons/calendar-light.svg",
  },
];
---

<Base 
  title="Tulio Cunha" 
  description="Full Stack Developer - Building elegant solutions with code. Connect with me on GitHub, LinkedIn, and more."
>
  <ProfileHeader
    name="Tulio Cunha"
    title="Full Stack Developer"
    bio="Building elegant solutions with code."
    avatarSrc="/my photo.png"
  />
  
  <ContactWidget />
  
  <section class="socials">
    <h2 class="socials__heading" data-reveal data-reveal-order="2">Socials</h2>
    <div class="socials__dock">
      {socialLinks.map((link, index) => (
        <DockLink
          href={link.href}
          title={link.title}
          tint={link.tint}
          iconAsset={link.iconAsset}
          revealOrder={index + 3}
        />
      ))}
    </div>
  </section>
</Base>

<style>
  .socials {
    padding: var(--space-12) var(--container-padding-x) var(--space-24);
    max-width: var(--container-xl);
    margin: 0 auto;
  }

  .socials__heading {
    font-size: var(--fs-title-3);
    font-weight: var(--fw-semibold);
    letter-spacing: var(--ls-title);
    text-align: center;
    margin: 0 0 var(--space-12) 0;
    color: var(--text-primary);
  }
  
  .socials__dock {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    grid-auto-rows: auto;
    gap: clamp(14px, 2vw, 20px) clamp(18px, 3vw, 28px);
    width: clamp(560px, 65vw, 800px);
    max-width: 800px;
    margin: 0 auto;
    padding: var(--space-4) var(--space-6);
    background: var(--surface-elevated);
    backdrop-filter: blur(var(--glass-blur-base)) saturate(var(--glass-saturation-base));
    -webkit-backdrop-filter: blur(var(--glass-blur-base)) saturate(var(--glass-saturation-base));
    border: 1px solid var(--panel-border);
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-card);
    transition: all var(--motion-duration-base) var(--motion-ease-out);
  }

  .socials__dock:hover {
    box-shadow: var(--shadow-card-hover);
    border-color: var(--panel-border-strong);
  }
  
  /* Tablet */
  @media (min-width: 640px) and (max-width: 1023px) {
    .socials__dock {
      width: clamp(480px, 70vw, 600px);
      gap: var(--space-3) var(--space-4);
      padding: var(--space-3) var(--space-5);
    }
  }


  /* Mobile */
  @media (max-width: 639px) {
    .socials {
      padding: var(--space-8) var(--space-4) var(--space-24);
    }

    .socials__heading {
      margin-bottom: var(--space-8);
      font-size: clamp(1.2rem, 4vw, 1.5rem);
    }

    .socials__dock {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      width: 100%;
      max-width: 400px;
      gap: var(--space-3) var(--space-4);
      padding: var(--space-3) var(--space-4);
    }
  }
</style>
